<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drugs"
    android:orientation="vertical"
    tools:context="com.example.elisa.checkyourdrug.MainActivity">

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="300dp"
        android:backgroundTint="@color/common_google_signin_btn_text_dark_focused"
        android:fontFamily="sans-serif-condensed"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:gravity="center_horizontal"
        android:onClick="openScanner"
        android:text="Scan your drug"
        android:textColor="@color/colorAccent"
        android:textSize="35dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@android:color/background_dark"
        android:fontFamily="sans-serif-condensed"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:gravity="center"
        android:onClick="openInfo"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="About the APP"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="35dp" />
</LinearLayout>
